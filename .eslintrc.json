{
    "root":true,
    "parser": "@typescript-eslint/parser",
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2019
	},
	"rules": {
        // "indent": ["error", "tab"],
        "semi": ["error", "always"],
        "prefer-const": "error",
        "no-empty-function": "error",
        "block-scoped-var": "warn",
		"class-methods-use-this": "warn"
	}
}